<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_multi_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="org.abondar.experimental.androidbasics.MultiControlActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="5dp"
                  android:layout_margin="5dp"
                  android:orientation="vertical"
                  android:id="@+id/linearLayout">


        <ToggleButton
                android:id="@+id/tglButton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Toggle Button"
                android:textOn="Stop"
                android:textOff="Run"
        />


        <CheckBox
                android:id="@+id/burgerCB"
                android:layout_width="wrap_content"
                android:text="Burger"
                android:layout_height="wrap_content"/>

        <CheckBox
                android:id="@+id/saloCB"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Salo"
                android:onClick="saloCLickListener"
        />
        <CheckBox
                android:id="@+id/pizzaCB"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pizza"
        />

        <Switch
                android:id="@+id/switch1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="Switch is off"

        />

        <RadioGroup
                android:id="@+id/rg1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <RadioButton
                    android:id="@+id/rb1"
                    android:text="Juice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
            />

            <RadioButton
                    android:id="@+id/rb2"
                    android:text="Beer"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
            />

            <RadioButton
                    android:id="@+id/rb3"
                    android:text="Vodka"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
            />

        </RadioGroup>

    </LinearLayout>
</RelativeLayout>
