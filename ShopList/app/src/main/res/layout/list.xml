<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopListActivity" >

    <TextView
        android:id="@+id/customerview"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="CustomerView" />

    <ListView
        android:id="@+id/buylist"
        android:layout_width="wrap_content"
        android:layout_height="358dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/customerview" >

    </ListView>

    <TextView
        android:id="@+id/statuslabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buylist"
        android:layout_toRightOf="@+id/report"
        android:text="list items " />

    <Button
        android:id="@+id/getlistbutton"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/report"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/customerview"
        android:text="Получить список" />

    <Button
        android:id="@+id/report"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/getlistbutton"
        android:text="Отослать отчет" />

    <Button
        android:id="@+id/customerdet"
        android:layout_width="146dp"
        android:layout_height="86dp"
        android:layout_alignBottom="@+id/report"
        android:layout_alignLeft="@+id/statuslabel"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:text="Данные о заказчике" />
    
</RelativeLayout>