<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="experimental.abondar.org.miwok">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/category_numbers" android:name=".NumbersActivity">
        </activity>
        <activity android:label="@string/category_family" android:name=".FamilyMembersActivity">
        </activity>
        <activity android:label="@string/category_colors" android:name=".ColorsActivity">
        </activity>
        <activity android:label="@string/category_phrases" android:name=".PhrasesActivity">
        </activity>
    </application>

</manifest>