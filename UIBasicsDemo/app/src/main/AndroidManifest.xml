<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.abondar.experimental.uibasicsdemo">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".TextControlsActivity">
        </activity>
        <activity android:name=".MultiControlActivity">
        </activity>
        <activity android:name=".TimeActivity">
        </activity>
        <activity android:name=".fragmentdemo.FragmentsActivity">
        </activity>
        <activity android:name=".fragmentdemo.DetailsActivity">
        </activity>
        <activity android:name=".SearchResultActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>
        <service android:name=".BackGroundService"/>
    </application>

</manifest>