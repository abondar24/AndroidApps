<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.abondar.experimental.uibasicsdemo">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google MapsActivity Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".TextControlsActivity">
        </activity>
        <activity android:name=".MultiControlActivity">
        </activity>
        <activity android:name=".TimeActivity">
        </activity>
        <activity android:name=".fragmentdemo.FragmentsActivity">
        </activity>
        <activity android:name=".fragmentdemo.DetailsActivity">
        </activity>
        <activity android:name=".SearchResultActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>

        <service android:name=".BackGroundService"/>

        <receiver android:name=".NotificationReciever">
            <intent-filter>
                <action android:name="com.parse.push.intent.RECEIVE"/>
                <action android:name="com.parse.push.intent.DELETE"/>
                <action android:name="com.parse.push.intent.OPEN"/>
            </intent-filter>
        </receiver>

        <activity android:name=".ScaleActivity">
        </activity>
    </application>

</manifest>